        <ImageView
            android:id="@+id/iv_bike_confirm"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:layout_toRightOf="@id/cv_image"
            android:layout_below="@+id/tv_parking_confirm_name"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_8"
            android:src="@drawable/ic_directions_bike_black_24dp"/>

        <TextView
            android:id="@+id/tv_charges_bike_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewSecondaryFields"
            android:text="\u20B9 4506"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/iv_bike_confirm"
            android:layout_below="@+id/tv_parking_confirm_name"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/iv_car_confirm"
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:layout_toRightOf="@id/tv_charges_bike_confirm"
            android:layout_below="@+id/tv_parking_confirm_name"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_8"
            android:src="@drawable/ic_directions_car_black_24dp"/>

        <TextView
            android:id="@+id/tv_charges_car_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewSecondaryFields"
            android:text="\u20B9 4506"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@id/iv_car_confirm"
            android:layout_below="@+id/tv_parking_confirm_name"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_8"/>

        <TextView
            android:id="@+id/tv_bike_availability_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bike_confirm"
            android:layout_alignStart="@id/iv_bike_confirm"
            android:layout_marginStart="@dimen/margin_8"
