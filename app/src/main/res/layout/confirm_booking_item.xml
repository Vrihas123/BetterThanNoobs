            android:text="2"/>

        <TextView
            android:id="@+id/tv_car_availability_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_car_confirm"
            android:layout_alignStart="@id/iv_car_confirm"
            android:layout_marginStart="@dimen/margin_8"
            style="@style/TextViewSecondaryFields"
            android:text="3"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_image"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="ACCEPT"
                android:padding="4dp"
                android:background="@color/colorGreyLow"
                android:fontFamily="@font/avenir_black"
                android:textColor="@color/colorBlackLow"
                android:textAlignment="center"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/btn_deny"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="DENY"
                android:padding="4dp"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/avenir_black"
                android:background="@color/colorGreyLow"
                android:textColor="@color/colorBlackLow"
                android:textAlignment="center"/>


        </LinearLayout>


    </RelativeLayout>

