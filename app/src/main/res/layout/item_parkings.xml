<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_parent"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    app:cardElevation="@dimen/margin_8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="@dimen/margin_4"
            android:layout_margin="@dimen/margin_8">

            <ImageView
                android:id="@+id/iv_parking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/parking"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <RatingBar
            android:id="@+id/ratingParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_image"
            android:layout_alignStart="@+id/cv_image"
            android:layout_alignEnd="@+id/cv_image"
            android:layout_marginBottom="@dimen/margin_8"
            style="?android:attr/ratingBarStyleSmall"
            android:rating="4"/>

        <TextView
            android:id="@+id/tv_parking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cv_image"
            android:layout_marginTop="@dimen/margin_8"
            android:text="Pathuk's Parking Centre"
            style="@style/TextViewSecondary"/>

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/margin_18"
            android:layout_height="@dimen/margin_18"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_toRightOf="@+id/cv_image"
            android:layout_below="@+id/tv_parking_name"
            android:src="@drawable/ic_place_black_24dp"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_location"
            android:layout_below="@+id/tv_parking_name"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8"
            android:text="33-Parmananda Nagar"
            style="@style/TextViewTertiary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:text="Book"
            android:minHeight="32dp"
            android:minWidth="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_location"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_16"/>

        <TextView
            android:id="@+id/tv_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewPrimary"
            android:text="\u20B9 4506"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/cv_image"
            android:layout_below="@+id/tv_location"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginStart="@dimen/margin_4"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>